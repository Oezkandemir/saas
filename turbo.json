{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**", ".expo/**"],
      "env": [
        "NODE_ENV", 
        "NEXT_PUBLIC_*",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_JWT_SECRET",
        "RESEND_API_KEY",
        "EMAIL_FROM",
        "STRIPE_API_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV", 
        "NEXT_PUBLIC_*",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_JWT_SECRET",
        "RESEND_API_KEY",
        "EMAIL_FROM",
        "STRIPE_API_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": ["eslint-report.json"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": ["tsconfig.tsbuildinfo"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "format": {
      "outputs": []
    },
    "analyze": {
      "dependsOn": ["^build"],
      "outputs": [".next/analyze/**"]
    }
  }
}
